@{
    ViewData["Title"] = "Registrar";
}

<style>
        body{background-color: #171717;}
        main{background-color: #171717;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2%;}      
</style>
<div class="CuadroIniciar">
    <div class="ContenedorLog">
        <h2 class="loginh2">Registrarse</h2>
        <form id="formRegistro" asp-controller="Home" asp-action="GuardarUsuario" method="post">
            <div class="form-group">
                    <label class="InfoIngresar" for="Usuario">Nombre de Usuario</del>:</label>
                    <input  id="Usuario" name="Usuario" required>
            </div>
            <div class="form-group">
                <label class="InfoIngresar" for="Contraseña">Contraseña:</label>
                <input type="password" id="Contraseña" name="Contraseña" required>
            </div>
                <div class="form-group">
                <label class="InfoIngresar" for="Contraseña">Ingrese nuevamente su contraseña:</label>
                <input type="password" id="Contraseña2" name="Contraseña2" required>
            </div>
            <div class="form-group">
                <label class="InfoIngresar" for="Email">Email:</label>
                <input type="email" id="Email" name="Email">
            </div>
            <div class="botonesNo">
            <button type="submit" class="BotonIniciar">Registrar</button>
            </div>
        </form>

        @{
            if(ViewBag.Error != true) 
            {
                <h2>"No se completaron todos los datos o las contraseñas ingresadas no coinciden"</h2>
            }
        }
    </div>
</div>

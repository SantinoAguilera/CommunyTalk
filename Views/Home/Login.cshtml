@{
    ViewData["Title"] = "Login";
}    
    <style>
            body{background-color: #171717;}
            main{background-color: #171717;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2%;}

        </style>
<div class="CuadroIniciar">
    <div class="ContenedorLog">

        <h2 class="loginh2">Iniciar Sesión</h2>

        <form asp-controller="Home" asp-action="VerificarContraseña" method="post">
            <div class="form-group">
                <label class="InfoIngresar" for="Usuario">Usuario:</label>
                <input id="Usuario" name="Usuario" required>
            </div>
            <div class="form-group">
                <label class="InfoIngresar" for="Contraseña">Contraseña:</label>
                <input type="password" id="Contraseña" name="Contraseña" required>
            </div>
            <div class="botonesNo">
            <button type="submit" class="BotonIniciar">Iniciar Sesión</button>
            </div>
        </form>

        <div class="mt-3">
            <div class="botonesNo">
            <p class="InfoIngresar">¿No tienes cuenta?</p><a href='@Url.Action("Registrar", "Home")'> <button class="BotonNoIniciar">Registrate</button></a>
            </div>
            <p> @ViewBag.Verificar</p>
        </div>
</div>
</div>

@{
    ViewData["Title"] = "Login";
}

<h2>Iniciar Sesión</h2>

<form asp-controller="Home" asp-action="VerificarContraseña" method="post">
    <div class="form-group">
        <label for="Usuario">Usuario:</label>
        <input type="text" class="form-control" id="Usuario" name="Usuario" required>
    </div>
    <div class="form-group">
        <label for="Contraseña">Contraseña:</label>
        <input type="password" class="form-control" id="Contraseña" name="Contraseña" required>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>

<div class="mt-3">
    <p>¿Olvidaste tu contraseña? <a class="btn btn-info" href='@Url.Action("Olvide", "Home")'>Recuperarla aquí</a></p>
    <p>¿No tienes cuenta?<a class="btn btn-info" href='@Url.Action("Registrar", "Home")'>Registrate</a>
    <p> @ViewBag.Verificar</p>
    </p>
</div>


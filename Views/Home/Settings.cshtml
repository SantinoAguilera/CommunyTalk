<style>


body {
    font-family: 'Inter', sans-serif;
    background-color: #8059B8; /* Fondo morado */
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    display: flex;
    width: 100%;
    min-width: 1400px; /* Se amplió el ancho máximo */

}

/* Sidebar */
.sidebar {
    background-color: #563D7C; /* Morado oscuro */
    color: #fff;
    width: 250px;
    padding: 20px;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.2);
}

.logo h1 {
    font-size: 1.5rem;
    margin-bottom: 40px;
    text-align: center;
    font-weight: 700;
    color: #7EF3BC; /* Verde pastel */
}

.menu {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.menu-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1rem;
    text-decoration: none;
    color: #cfd8dc;
    padding: 10px 15px;
    border-radius: 5px;
    transition: background 0.3s ease, transform 0.3s ease;
}

.menu-item:hover, .menu-item.active {
    background-color: #8059B8;
    color: #fff;
    transform: scale(1.05);
}

/* Main Content */
.main {
    flex-grow: 1;
    padding: 30px;
    width: 80%; /* Mucho más ancho */
    background-color: #2C2F33; /* Fondo oscuro estilo Discord */
    border: 2px solid #8059B8; /* Bordes morados */
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

/* Encabezado del main */
.main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.main-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
}

/* Botón */
.save-btn {
    background-color: #7EF3BC;
    color: #2C2F33;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
}

.save-btn:hover {
    background-color: #69d1a4;
    transform: translateY(-3px);
}

/* Formulario */
.form-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group label {
    font-size: 0.9rem;
    margin-bottom: 5px;
    color: #ddd;
}

.form-group input, 
.form-group select, 
.form-group textarea {
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #444;
    border-radius: 5px;
    outline: none;
    background: #333;
    color: #fff;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-group input:focus, 
.form-group select:focus, 
.form-group textarea:focus {
    border-color: #7EF3BC;
    box-shadow: 0 0 8px #7EF3BC;
}



</style>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configuración de Perfil</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <h1>⚙️ Config</h1>
            </div>
            <nav class="menu">
                <a href="#" class="menu-item active"><i class="fas fa-user"></i> Perfil</a>
                <a href="#"><i class="fas fa-envelope"></i> Notificaciones</a>
                <a href="#"><i class="fas fa-lock"></i> Privacidad</a>
                <a href="#"><i class="fas fa-shield-alt"></i> Seguridad</a>
                <a href="#"><i class="fas fa-question-circle"></i> Ayuda</a>
            </nav>
        </aside>
        <!-- Main Content -->
        <main class="main">
            <header class="main-header">
                <h2>Perfil Público</h2>
                <button class="save-btn"><i class="fas fa-save"></i> Guardar</button>
            </header>
            <section class="form-container">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" id="name" placeholder="Escribe tu nombre...">
                </div>
                <div class="form-group">
                    <label for="email">Correo público</label>
                    <input type="email" id="email" placeholder="Ejemplo: usuario@mail.com">
                </div>
                <div class="form-group">
                    <label for="bio">Biografía</label>
                    <textarea id="bio" placeholder="Escribe algo sobre ti..."></textarea>
                </div>
                <div class="form-group">
                    <label for="pronouns">Pronombres</label>
                    <select id="pronouns">
                        <option value="nospec">No especificar</option>
                        <option value="he">Él</option>
                        <option value="she">Ella</option>
                        <option value="they">Ellos/Ellas</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="url">Enlace</label>
                    <input type="url" id="url" placeholder="www.tuweb.com">
                </div>
            </section>
        </main>
    </div>
</body>
</html>

    <script>
    
document.addEventListener('DOMContentLoaded', function() {
    const links = document.querySelectorAll('.nav a');
    const content = document.getElementById('content');

    links.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const view = this.getAttribute('data-view');
            loadView(view);
            updateActiveLink(this);
        });
    });

    function loadView(view) {
        content.innerHTML = `
            <h2>Vista: ${view}</h2>
            <p>Aquí puedes gestionar la sección de ${view}.</p>
        `;
    }

    function updateActiveLink(activeLink) {
        links.forEach(link => link.classList.remove('active'));
        activeLink.classList.add('active');
    }
});

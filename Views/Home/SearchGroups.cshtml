@{
    ViewData["Title"]="Grupos";
}
<section class="search-section">

    <h1 class="tituloGrupos">Grupos</h1>
    <div class="search-container">
        <input type="text" id="searchInputGroups" placeholder="Buscar grupos..." />
               <button type="submit" class="search-button">
                        <img class="lupa" src="/images/lupa.png"/>
                    </button>
        </button>
    </div>
    <div class="container">
        <div class="row justify-content-start" id="groupList">
            @{
                    if (ViewBag.Grupos != null && ViewBag.IntegrantesGrupo != null) 
                    {
                        foreach (Grupos grupo in ViewBag.Grupos) 
                        {
                            foreach (IntegrantesXGrupo integrante in ViewBag.IntegrantesGrupo) 
                            {
                                if (integrante.IdUsuario == BD.IdUsuarioSesion && grupo.IdGrupo == integrante.IdGrupo)
                                {
                                    string FotoPerfil = grupo.FotodePerfil;
                                    <div class="col-auto mb-3 group-card" data-group-name="@grupo.Nombre">
                                        <a asp-controller="Home" asp-action="GroupChat" asp-route-IdGrupo="@grupo.IdGrupo">
                                            <div class="card carta" style="width: 560px;">
                                                <div class="row g-0">
                                                    <div class="col-md-4">
                                                        <img src="@FotoPerfil" class="img-fluid rounded-start cartaImagen">
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <h1 class="card-title">@grupo.Nombre</h1>
                                                            <p class="card-text">@grupo.Descripcion</p>
                                                            
                                                            @if(grupo.Privado == true)
                                                            {
                                                                <p class="card-text">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="3em" viewBox="0 0 24 24">
                                                                    <path fill="#8059B8" d="M6 22q-.825 0-1.412-.587T4 20V10q0-.825.588-1.412T6 8h1V6q0-2.075 1.463-3.537T12 1t3.538 1.463T17 6v2h1q.825 0 1.413.588T20 10v10q0 .825-.587 1.413T18 22zm6-5q.825 0 1.413-.587T14 15t-.587-1.412T12 13t-1.412.588T10 15t.588 1.413T12 17M9 8h6V6q0-1.25-.875-2.125T12 3t-2.125.875T9 6z"/>
                                                                </svg></p>
                                                            }
                                                            else
                                                            {
                                                                <p class="card-text">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="13m" viewBox="0 0 24 24">
                                                                    <path fill="#8059B8" d="M12 2c1.091 0 2.117.292 3 .804a1 1 0="></path>
                                                                </svg></p>
                                                            }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                }
                            }
                        }
                    }
                    else 
                    {
                        <p>No se encontraron grupos</p>
                    }
                }

                      <div class="botonesNo">
                    <a href='@Url.Action("CrearGrupo", "Home")'><button class="BotonNoIniciar">Crear Grupo</button></a>
                </div>
        </div>
    </div>
</section>

<!-- Script para la búsqueda en tiempo real -->
<script>
    const searchInputGroups = document.getElementById('searchInputGroups');
    const groupList = document.getElementById('groupList');
    let debounceTimer;

    // Función para filtrar grupos por el comienzo del nombre
    function filterGroups() {
        const searchText = searchInputGroups.value.toLowerCase();
        const groupCards = groupList.getElementsByClassName('group-card');

        for (let card of groupCards) {
            const groupName = card.getAttribute('data-group-name').toLowerCase();
            if (groupName.startsWith(searchText)) {
                card.style.display = 'block'; // Muestra la tarjeta si el nombre empieza con el texto
            } else {
                card.style.display = 'none'; // Oculta la tarjeta si no empieza con el texto
            }
        }
    }

    // Configuración de debounce para esperar 500ms después de la última escritura
    searchInputGroups.addEventListener('input', () => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(filterGroups, 500);
    });
</script>


@{
    ViewData["Title"] = "Home Page";
}

<style>
    body{
        background-color: #171717;
    }
</style>

@{
    if(BD.IdUsuarioSesion == 0)
    {
        <div class="LandingPage">
            <div class="Imagen">
                <img src = "/images/Logo.png">
            </div>
            <div class="BotonesYtexto">
                <p>Bienvenido a </p>
                <p>CommunyTalk, la</p>
                <p>mejor red social</p>
                <p>para uso estudiantil</p> 
                <div class="Botones">
                    <a href='@Url.Action("Login", "Home")'><button class="Boton1">Iniciar Sesión</button></a> 
                    <a href='@Url.Action("Registrar", "Home", new {error = false})'><button class="Boton2">Registrarse</button></a> 
                </div>
            </div>
        </div>

    }
    else
    {
        /* MENU PRINCIPAL */
        <style>
            body{
                background-color: #8059B8;
            }
        </style>
        <div class="Land">
        <div class="izquierda">
            <h1>Eleva tus vínculos</h1>
            <p>Comunicate en cuestión de segundos con personas de tu entorno</p>
            <p>Comenza a hablar mediante grupos, amigos y comunidades</p>
            <a href='@Url.Action("SearchGroups", "Home")'><button class="BotonIniciar">Grupos</button></a> 
        </div>
        <div class="derecha">
            <img src="/images/Percy.png">
        </div>
        </div>
    }
}

<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
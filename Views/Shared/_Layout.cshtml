<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CommunyTalk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CommunyTalk.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="horizontal">
                        @{
                            if(BD.IdUsuarioSesion != 0)
                            {
                                <li class="nav-item">
                                    <button type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                                    <img id="flechaHeader" onclick="cambiarFlechaArriba()" class="imgMenu" src="/images/FlechaAbajo.png">
                                    </button>
                                </li>
                            }
                        }
                        
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index"><p>CommunyTalk</p></a>
                        </li>
                        @{
                            if(BD.IdUsuarioSesion != 0)
                            {
                                <li class="nav-item">
                                    <div class="User">
                                        <a asp-area="" asp-controller="Home" asp-action="Usuario">
                                            @{
                                                string FotodePerfil = "/images/UserImages/" + BD.ObtenerFoto(BD.IdUsuarioSesion);
                                                <img class="imgPerfil" src="@FotodePerfil">
                                            }
                                        </a>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Categoría</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        @{
            if(BD.IdUsuarioSesion != 0)
            {
                <div class="offcanvas-body">        
                    <ul class="sidebarbuttons">                        
                        <a class="achicarBoton" asp-controller="Home" asp-action="SearchFriends"><li class="sidebarbutton">Amigos</li></a>
                        <a class="achicarBoton" asp-controller="Home" asp-action="SearchGroups"><li class="sidebarbutton">Grupos</li></a>
                        <a class="achicarBoton" asp-controller="Home" asp-action="SearchCommunities"><li class="sidebarbutton">Comunidades</li></a>

                    </ul>
                </div>
            }
        }
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
